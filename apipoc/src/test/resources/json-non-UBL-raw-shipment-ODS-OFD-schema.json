{
    "$schema":"http://json-schema.org/draft-04/schema#",
    "type":"object",
    "additionalProperties":false,
    "properties": {
              "Consignment": {
                "type": "object",
                "additionalProperties":false,
                "properties": {
                  "ID": {
                    "type": "string",
                    "minLength": 1
                  },
                  "TransportEvent": {
                    "type": "array",
                    "additionalProperties":false,
                    "uniqueItems": true,
                    "minItems": 1,
                    "items": {
                      "required": [
                        "ID",
                        "Description",
                        "TransportEventTypeCode"
                      ],
                      "properties": {
                        "ID": {
                          "type": "string",
                          "minLength": 1
                        },
                        "Description": {
                          "type": "string",
                          "minLength": 1
                        },
                        "CurrentStatus": {
                          "type": "object",
                          "additionalProperties":false,
                          "properties": {
                            "Description": {
                              "type": "string",
                              "minLength": 1
                            },
                            "ReferenceDate": {
                              "type": ["string", "null"],
                              "minLength": 1
                            },
                            "ReferenceTime": {
                              "type": ["string", "null"],
                              "minLength": 1
                            },
                            "MilestoneGrouping": {
                              "type": "string",
                              "minLength": 1
                            }
                          },
                          "required": [
                            "Description",
                            "MilestoneGrouping"
                          ]
                        },
                        "TransportEventTypeCode": {
                          "type": "string",
                          "minLength": 1
                        }
                      }
                    }
                  }
                },
                "required": [
                  "ID",
                  "TransportEvent"
                ]
              },
              "ID": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "Consignment",
              "ID"
            ]
          }
